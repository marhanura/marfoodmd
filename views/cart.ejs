<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./_partial/_head') %>
    <title>Cart - MarFoodMD</title>
  </head>
  <body class="bg-warning-subtle">
    <%- include('./_partial/_navbar') %>
    <% if (success_msg) { %>
        <div class="alert alert-success"><%= success_msg %></div>
      <% } %>
    
      <% if (error_msg) { %>
        <div class="alert alert-danger"><%= error_msg %></div>
      <% } %>
    <div class="container py-5">
      <h2 class="text-center text-warning">Your Cart</h2>
      <div class="row justify-content-center">
        <div class="col-md-8">
          <div class="card">
            <div class="card-body">
              <table class="table table-bordered text-center">
                <thead class="table-warning">
                  <tr>
                    <th>Item</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Total</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% let totalPrice = 0; if (cartItems && cartItems.length > 0)
                  { cartItems.forEach(el => { totalPrice += el.Item.price * cart.quantity; }); }
                  %>
                  <tr>
                    <% cartItems.forEach(el => { %>
                    <td><%= el.Item.name %></td>
                    <td>
                      <a href="/cart/<%= cart.id %>/decrease"><button
                        class="btn btn-sm btn-warning"
                      >
                        -
                      </button></a>
                      <input
                        type="number"
                        class="form-control d-inline text-center w-25"
                        value="<%= cart.quantity %>"
                        min="1"
                      />
                      <a href="/cart/<%= cart.id %>/increase"><button
                        class="btn btn-sm btn-warning"
                      >
                        +
                      </button></a>
                    </td>
                    <td><%= formatRupiah(el.Item.price) %></td>
                    <td><%= formatRupiah(totalPrice) %></td>
                    <td>
                    <a href="/cart/<%= cart.id %>/delete" onclick="return confirm('Are you sure?')" class="btn btn-danger">Remove</a>
                      <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
                    </td>
                  </tr>
                   <% }) %>
                </tbody>
              </table>
              <div class="text-end">
                <h4>
                  Total:
                  <span class="text-warning"
                    ><%= formatRupiah(totalPrice) %>
                  </span>
                </h4>
                <button id="checkoutBtn" class="btn btn-success mt-3">Checkout</button>
<script>
  document.getElementById("checkoutBtn").addEventListener("click", async function () {
    try {
      const response = await fetch("/cart/invoice");
      const data = await response.json();

      if (data.success) {
        alert("Invoice berhasil dibuat! Klik OK untuk melihat.");
        window.open(data.url, "_blank");
      } else {
        alert("Gagal membuat invoice.");
      }
    } catch (error) {
      console.error(error);
      alert("Terjadi kesalahan.");
    }
  });
</script>

               
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <footer
      class="text-white text-center py-3 mt-5"
      style="background-color: #ffa725"
    >
      <p>&copy; 2025 MarFoodMD. All Rights Reserved.</p>
    </footer>
  </body>
</html>
