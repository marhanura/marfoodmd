<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./_partial/_head') %>
    <title>Cart - MarFoodMD</title>
  </head>
  <body class="bg-warning-subtle">
    <%- include('./_partial/_navbar') %>
    <div class="container py-5">
      <h2 class="text-center text-warning">Your Cart</h2>
      <div class="row justify-content-center">
        <div class="col-md-8">
          <div class="card">
            <div class="card-body">
              <table class="table table-bordered text-center">
                <thead class="table-warning">
                  <tr>
                    <th>Item</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Total</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <% let totalPrice = 0; let totalAll =0%>
                <tbody>
                  <% if(cart && cart.length > 0) { cart.forEach(el => {
                  el.Items.forEach(item => { totalPrice += item.price *
                  el.quantity; totalAll += totalPrice%>
                  <tr>
                    <td><%= item.name %></td>
                    <td>
                      <a href="/cart/<%= el.id %>/decrease"
                        ><button class="btn btn-sm btn-warning">-</button></a
                      >
                      <input
                        type="number"
                        class="form-control d-inline text-center w-25"
                        value="<%= el.quantity %>"
                        min="1"
                      />
                      <a href="/cart/<%= el.id %>/increase"
                        ><button class="btn btn-sm btn-warning">+</button></a
                      >
                    </td>
                    <td><%= formatRupiah(item.price) %></td>
                    <td><%= formatRupiah(totalPrice) %></td>
                    <td>
                      <button class="btn btn-danger btn-sm">Remove</button>
                    </td>
                  </tr>
                  <% })}) %>
                </tbody>
              </table>
              <div class="text-end">
                <h4>
                  Total:
                  <span class="text-warning"
                    ><%= formatRupiah(totalAll) %>
                  </span>
                </h4>
                <button class="btn btn-success mt-3">Checkout</button>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <footer
      class="text-white text-center py-3 mt-5"
      style="background-color: #ffa725"
    >
      <p>&copy; 2025 MarFoodMD. All Rights Reserved.</p>
    </footer>
  </body>
</html>
