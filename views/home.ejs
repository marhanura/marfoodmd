<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home - MarFoodMD</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-warning-subtle">
    <%- include('./_partial/_navbar') %>
    <header class="text-center py-5">
      <img
        src="<%= '/logo.png' %>"
        alt="logo"
        class="img-fluid"
        width="300"
        style="margin-left: -50px; margin-top: -50px"
      />
      <h1 class="text-warning mt-3" style="margin-top: -50px">
        Fast & Delicious Food Delivered to You
      </h1>
      <p class="text-muted">Order your favorite meals anytime, anywhere!</p>
      <a href="#menu" class="btn btn-warning">Order Now</a>
    </header>
    <section id="menu" class="container py-5" style="margin-top: -50px">
      <h2 class="text-center text-warning">Our Menu</h2>
      <div id="menuCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
          <% menu.forEach(el => { %>
          <div
            class="carousel-item <% if (el.id === 1) { %> <%= "active" %> <% } %>"
          >
            <div class="row justify-content-center">
              <div class="col-md-4">
                <div class="card">
                  <img
                    src="<%= el.imgUrl %>"
                    class="card-img-top"
                    style="object-fit: cover; height: 250px"
                    alt="<%= el.name %>"
                  />
                  <div class="card-body text-center">
                    <h5 class="card-title"><%= el.name %></h5>
                    <p class="card-text"><%= el.description %></p>
                    <button class="btn btn-warning">Order Now</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <% }) %>
        </div>
        <a
          class="carousel-control-prev"
          href="#menuCarousel"
          role="button"
          data-bs-slide="prev"
        >
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        </a>
        <a
          class="carousel-control-next"
          href="#menuCarousel"
          role="button"
          data-bs-slide="next"
        >
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
        </a>
      </div>
    </section>

    <footer
      class="text-white text-center py-3 mt-5"
      style="background-color: #ffa725"
    >
      <p>&copy; 2025 MarFoodMD. All Rights Reserved.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
