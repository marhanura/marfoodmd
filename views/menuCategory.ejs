<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./_partial/_head') %>
    <title>Menu</title>
  </head>
  <body>
    <%- include('./_partial/_navbar') %>
    <div class="container-fluid shadow-lg p-4" style="width: 80%">
      <h2 class="text-center text-warning">MENU</h2>
      <div class="d-flex justify-content-center">
        <a href="/menu/" class="btn btn-success" style="margin: 0 5px"
          >ALL MENU</a
        >
        <% categories.forEach(cat => { %>
        <a
          href="/menu/category/<%= cat.id %>"
          class="btn btn-success"
          style="margin: 0 5px"
          ><%= cat.name.toUpperCase() %></a
        >
        <% }) %>
      </div>
      <% menu.forEach(el => { %>
      <div class="card mb-3">
        <div class="row g-0">
          <div class="col-md-4">
            <img
              src="<%= el.imgUrl %>"
              class="img-fluid rounded-start"
              alt="<%= el.name %>"
              width="300"
            />
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title"><%= el.name %></h5>
              <p class="card-text"><%= el.description %></p>
              <p class="card-text">
                <small class="text-body-secondary"
                  ><%= formatRupiah(el.price) %></small
                >
              </p>
              <div>
                <a
                  class="btn btn-success"
                  href="/menu/<%= el.id %>/add"
                  onclick="return alert('<%= el.name%> has been added to cart')"
                  >Add to Cart</a
                >
              </div>
            </div>
          </div>
        </div>
      </div>
      <% }) %>
      <center>
        <a href="/" class="btn btn-secondary">Home</a>
        <a href="/cart" class="btn btn-warning">Go to Cart</a>
      </center>
    </div>
  </body>
</html>
